{
  "manifest_version": 2,

  "name": "MangaMap Helper",
  "description": "Automatically show hidden content on MangaMap when using AdBlock.",
  "version": "1.3",

  "permissions": [
    "webNavigation",
    "*://www.mangamap.com/*",
    "*://www.mangapass.com/*",
    "*://www.manga360.com/*",
    "*://www.mangateen.com/*"
  ],

  "content_scripts": [
    {
      "matches": [
        "*://www.mangamap.com/*",
        "*://www.mangapass.com/*",
        "*://www.manga360.com/*",
        "*://www.mangateen.com/*"
      ],
      "js": ["index.js"],
      "run_at": "document_end"
    }
  ]
}
